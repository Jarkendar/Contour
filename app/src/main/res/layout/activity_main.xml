<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jaroslaw.contour.MainActivity">

    <TextView
        android:id="@+id/desciption_X"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/axis_X"
        tools:layout_editor_absoluteX="74dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/desciption_Y"
        app:layout_constraintVertical_bias="0.584" />

    <TextView
        android:id="@+id/desciption_Y"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/axis_Y"
        tools:layout_editor_absoluteX="75dp"
        android:layout_marginBottom="92dp"
        app:layout_constraintBottom_toTopOf="@+id/desciption_Z" />

    <TextView
        android:id="@+id/desciption_Z"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/axis_Z"
        tools:layout_editor_absoluteX="75dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="139dp" />

    <TextView
        android:id="@+id/axis_X"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toRightOf="@+id/desciption_X"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/axis_Y"
        app:layout_constraintVertical_bias="0.588" />

    <TextView
        android:id="@+id/axis_Y"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toRightOf="@+id/desciption_Y"
        android:layout_marginBottom="93dp"
        app:layout_constraintBottom_toTopOf="@+id/axis_Z" />

    <TextView
        android:id="@+id/axis_Z"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/desciption_Z"
        android:layout_marginLeft="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="138dp" />
</android.support.constraint.ConstraintLayout>
